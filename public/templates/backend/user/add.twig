{% extends 'master.twig' %}

{% block title %}Bestellungen{% endblock %}

{% block content %}

    <div class="well">
        <h1>Neuen Kunden erstellen</h1>

        <form class="form" name="newuser" action="{{ currentUrl() }}" method="post">

            <div class="form-group">
                <label for="inputFirstname" class="">firstname</label>
                <input type="text" id="inputFirstname" name="inputFirstname" class="form-control" placeholder="Max" required autofocus>
            </div>

            <div class="form-group">
                <label for="inputLastname" class="">lastname</label>
                <input type="text" id="inputLastname" name="inputLastname" class="form-control" placeholder="Mustermann" required>
            </div>

            <div class="form-group">
                <label for="inputEmail" class="">email</label>
                <input type="email" id="inputEmail" name="inputEmail" class="form-control" placeholder="max@mustermann.at" required>
            </div>

            <div class="form-group">
                <label for="inputPassword" class="">password</label>
                <input type="text" id="inputPassword" name="inputPassword" class="form-control" required>
            </div>

            <div class="form-group">
                <label for="inputPhone" class="">phone</label>
                <input type="text" id="inputPassword" name="inputPhone" class="form-control" required>
            </div>

            <div class="form-group">
                <label for="inputPlz" class="">city code</label>
                <input type="number" id="inputPlz" name="inputPlz" class="form-control" required>
            </div>

            <div class="form-group">
                <label for="inputCity" class="">city</label>
                <input type="text" id="inputCity" name="inputCity" class="form-control" required>
            </div>

            <div class="form-group">
                <label for="inputRole" class="">role</label>
                <select id="inputRole" name="inputRole" class="form-control" required="required">
                    <option value="customer" selected>customer</option>
                  <!--  <option value="member">member</option>
                    <option value="employee">employee</option> -->
                    <option value="admin">admin</option>
                </select>
            </div>


            <button class="btn btn-lg btn-primary btn-block" type="submit">add</button>
        </form>
    </div>

{% endblock %}