{% extends "master.twig" %}

{% block title %}Login{% endblock %}

{% block content %}

    <h1>Login</h1>

    {% import "components/forms.twig" as forms %}

    {{ error }}
    <form name="register" action="register" method="post">
        <p>Firstname: {{ forms.input('firstname') }}</p>
        <p>Lastname: {{ forms.input('lastname') }}</p>
        <p>Email: {{ forms.input('email') }}</p>
        <p>Password: {{ forms.input('password') }}</p>
        <input type="submit" value="register">
    </form>

{% endblock %}