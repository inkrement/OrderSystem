{% extends 'master.twig' %}

{% block title %}Bestellungen{% endblock %}

{% block content %}

    <div class="well">
        <h1>Produkte</h1>

        <nav>
            <a href="/backend/products/new" class="btn btn-primary">add product</a>
        </nav>

        <table class="table table-striped">
            <tr>
                <th>bild</th>
                <th>name</th>
                <th>beschreibung</th>
                <th>preis</th>
                <th>optionen</th>
            </tr>

            {% for product in products %}
                <tr>
                    <td>
                        <img src="/templates/img/{{ product.getImg() }}">
                    </td>
                    <td>{{ product.getName() }}</td>
                    <td>{{ product.description() }}</td>
                    <td>{{ product.getUnitPrice() }}</td>

                    <td>
                        <form action="/backend/products/{{ product.getId() }}" method="post">
                            <input type="hidden" name="_METHOD" value="DELETE"/>
                            <button class="btn btn-danger" type="submit" value="submit">
                                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                            </button>
                        </form>
                    </td>
                </tr>
            {% endfor %}

        </table>
    </div>

{% endblock %}