{% extends 'master.twig' %}

{% block title %}Bestellungsinformation{% endblock %}

{% block content %}

    <div class="well">
        <h1>Add product</h1>

        <form enctype="multipart/form-data" class="form" name="newproduct" action="{{ currentUrl() }}" method="post">

            <div class="form-group">
                <label for="inputName" class="">product name</label>
                <input type="name" id="inputName" name="inputName" class="form-control" placeholder="name" required autofocus>
            </div>

            <div class="form-group">
                <label for="inputUnitPrice" class="">Unit price</label>
                <input type="text" id="inputUnitPrice" name="inputUnitPrice" class="form-control" placeholder="unit price" required>
            </div>

            <div class="form-group">
                <label for="inputDescription" class="">Description</label>
                <textarea id="inputDescription" name="inputDescription" class="form-control" placeholder="description">
                </textarea>
            </div>

            <div class="form-group">
                <label for="inputPicture" class="">picture</label>
                <input type="file" id="inputPicture" name="inputPicture">
            </div>


            <button class="btn btn-lg btn-primary btn-block" type="submit">add</button>
        </form>

    </div>

{% endblock %}